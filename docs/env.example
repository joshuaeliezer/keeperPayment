# ===== CONFIGURATION DE LA BASE DE DONNÉES =====
# Host de la base de données PostgreSQL
DB_HOST=localhost

# Port de la base de données PostgreSQL
DB_PORT=5432

# Nom d'utilisateur PostgreSQL
DB_USERNAME=postgres

# Mot de passe PostgreSQL
DB_PASSWORD=postgres

# Nom de la base de données
DB_DATABASE=payments

# URL complète de la base de données (utilisée en production sur Render)
# DATABASE_URL=postgresql://username:password@host:port/database

# ===== CONFIGURATION STRIPE =====
# Clé secrète Stripe (sk_test_... pour les tests, sk_live_... pour la production)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Secret du webhook Stripe (whsec_...)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===== CONFIGURATION RABBITMQ =====
# URL de connexion RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# ===== CONFIGURATION DE L'APPLICATION =====
# Environnement d'exécution (development, production, test)
NODE_ENV=development

# Port sur lequel l'application écoute
PORT=3000

# URL de base de l'API (utilisée pour les webhooks et liens)
API_URL=http://localhost:3000

# ===== CONFIGURATION OPTIONNELLE =====
# Niveau de log (error, warn, info, debug)
LOG_LEVEL=debug

# Origines CORS autorisées
CORS_ORIGIN=*

# Clé secrète JWT (générée automatiquement si non définie)
# JWT_SECRET=your_jwt_secret_here

# Durée d'expiration du JWT
# JWT_EXPIRES_IN=24h

# ===== CONFIGURATION DE SÉCURITÉ =====
# Taux de commission (10% par défaut)
# COMMISSION_RATE=0.1

# ===== CONFIGURATION DE MONITORING =====
# URL de l'endpoint de health check
# HEALTH_CHECK_URL=/health

# Intervalle de vérification de santé (en secondes)
# HEALTH_CHECK_INTERVAL=30
